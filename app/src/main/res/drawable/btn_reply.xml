<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="false"
        android:state_pressed="false"
        >
        <shape>
            <stroke
                android:color="@color/colorPatingLine"
                android:width="1px"/>
            <solid
                android:color="@color/layout_item_nol" />
        </shape>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="true"
        >
        <shape>
            <stroke
                android:color="@color/colorPatingLine"
                android:width="1px"/>
            <solid
                android:color="@color/layout_item_sel" />
        </shape>
    </item>
    <item
        android:state_selected="true"
        >
        <shape>
            <stroke
                android:color="@color/colorPatingLine"
                android:width="1px"/>
            <solid
                android:color="@color/layout_item_sel" />
        </shape>
    </item>
</selector>