<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="false"
        android:state_pressed="false"
        >
        <shape>
            <stroke
                android:color="@color/colorHighlight"
                android:width="1dp"/>
            <corners
                android:radius="15dp" />
            <solid
                android:color="@color/colorItemNormal" />
        </shape>
    </item>
    <item
        android:state_selected="false"
        android:state_pressed="true"
        >
        <shape>
            <stroke
                android:color="@color/colorHighlight"
                android:width="1dp"/>
            <corners
                android:radius="15dp" />
            <solid
                android:color="@color/colorItemNormal" />
        </shape>
    </item>
    <item
        android:state_selected="true"
        >
        <shape>
            <stroke
                android:color="@color/colorHighlight"
                android:width="1dp"/>
            <corners
                android:radius="15dp" />
            <solid
                android:color="@color/colorHighlight" />
        </shape>
    </item>
</selector>